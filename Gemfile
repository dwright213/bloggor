source 'https://rubygems.org'

gem 'rails'
gem 'pg'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'pry'
gem 'devise'
gem 'rest-client'
gem 'jbuilder' # used for serialization of models into JSON
gem 'kaminari' # adds pagination to ActiveModels


group :development do
  gem 'web-console'
  gem 'spring'
  gem 'quiet_assets'
end

group :test, :development do
  gem 'byebug'
  gem 'dotenv-rails'
end


group :test do
  gem 'shoulda-matchers'
  gem 'capybara'
  gem 'factory_girl_rails'
  gem 'poltergeist'
  gem 'launchy'
  gem 'database_cleaner'
end

group :production do
  gem 'rails_12factor'
end
